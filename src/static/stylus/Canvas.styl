@import 'common.styl'
@import 'PageLoader.styl'


/* canvas-component */

#appInit
  width 100%
  height 100%
  background-image url(../../images/2.jpg)
  background-position 50%
  background-size cover
  background-repeat no-repeat
  background-attachment: fixed;
  &:after
    content ''
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-color rgba(0,0,0,0.3)
  .wrapper
    display: flex;
    align-items center
    width 100%
    padding 20px 0px
    position relative
    .content
      width 100%
      vertical-align middle
      position relative
      z-index 98
    .animation-is-done
      opacity 1
      transform scale(1);
.content__animate
  position absolute
  width 100%
  height 100%
  background-color rgba(255,255,255,0.7)
  position absolute
  transition all .3s
  svg
    position absolute
    left 50%
    top 50%
    margin-top -25px
    margin-left -25px
    animation-name: circle-rotate;
    animation-duration: 1.5s;
    animation-direction alternate
    animation-timing-function ease-in
    animation-iteration-count infinite
    @keyframes circle-rotate
      0% {transform: rotate(0deg)}
      100% {transform: rotate(720deg)}



  #circle
    stroke-dasharray: 145;
    stroke-dashoffset: 145;
    animation-name: circle;
    animation-duration: 1.5s;
    animation-direction alternate
    animation-timing-function ease-in
    animation-iteration-count infinite
    @keyframes circle
      0% {stroke-dashoffset: 145;}
      60% {stroke-dashoffset: 30;}
      100% {stroke-dashoffset: 0;}




.content__animate.hide
  opacity 0


.content__period-box
  display inline-block
  position relative

.content__select
  -webkit-appearance: none;
  border none
  background-color transparent
  font-size 22px
  color #fff
  font-weight 300
  margin-right 30px
  color #fff
  letter-spacing .5px
  position relative
  cursor pointer
  &:before
    content ''
    position absolute
    width 12px
    height 12px
    background-color #fff
    border-radius 50%
    top 50%
    margin-top -6px
    right 22px

  option
    color #000


.content__canvas-box
  overflow auto
  position relative
  text-align center
.content__top-row
  padding-left 0
.content__middle-row
  background-color rgba(255,255,255,0.7)
  box-shadow: 0px 5px 15px 3px rgba(0,0,0,0.2)
  border-radius 3px

.content__canvas-animate
  background: #928a8a;
  border-radius: 50%;
  position: absolute;
  width: 20%;
  height: 20%;
  top: -100px;
  left: -200px;
  padding-bottom: 0;
  box-shadow: 0px 0px 0px 10px rgba(255, 255, 255,0.4);
  background linear-gradient(to bottom, #7b8d8a, #16333e)
.content__select-data
  position relative
  .content__trigr-animate
    content ''
    position absolute
    height 7px
    width 7px
    background-color #f37070
    left 0%
    top -10px
    border-radius 3px
    transition ease-in-out 0.3s
   .slide--show
      animation-name: slide-show;
      animation-duration: .3s;
      animation-iteration-count: 1;
      animation-timing-function ease-in-out
      @keyframes slide-show
          0% {background-color:#f44336;}
          30% {width:10%;background-color: rgba(133,159,239,0.7)}
          75%{width:30%}
          //85%{width:10%}
          100% {background-color:#f37070;width:7px;}
      

    
  .btn-type
    font-size 22px
    color #fff
    font-weight 300
    margin-right 15px
    transition all .3s
    position relative
    padding-top 5px
    transition all 0.3s
    cursor pointer
    letter-spacing .5px

.opacity-in
  opacity 1 !important



.slide--period
  border: 7px solid transparent;
  border-top: 7px solid #f37070;
  border-radius 7px
  position absolute
  left 0
  top -10px
  animation-name: slide-show-select;
  animation-duration: 1s;
  animation-iteration-count: infinite;
  animation-timing-function ease-in
  //animation-timing-function linear
  @keyframes slide-show-select
    0% {transform:rotateY(0deg)}
    50% {transform:rotateY(180deg)}
    //85%{width:10%}
    100% {transform:rotateY(380deg)}

.slide--hold
  animation-iteration-count: 1;

.animation--vawe
  animation-name: animation--vawe
  animation-duration: .5s;
  animation-timing-function ease-in
  animation-iteration-count 1
  @keyframes animation--vawe
    0% {opacity: 1;}
    40% {opacity: .5; box-shadow: 0px 0px 0px 40px rgba(255, 255, 255,0.4); width: 300%;}
    60% {opacity: .4; box-shadow: 40px 0px 0px 80px rgba(255, 255, 255,0.4);}
    100% {opacity: .0;height: 200%;right: 100px; width:100%; box-shadow: 40px 70px 0px 90px rgba(255, 255, 255,0.4);}
.overflow
  overflow hidden




/* app media*/

m1 = media(h,500,0)
@media m1
  #appInit .wrapper
    align-items baseline


m2 = media(w,650,0)
@media m2
  #appInit .wrapper
    align-items baseline
  .preload-box
    font-size 24px !important
  .content__top-row
    display flex
    flex-direction column-reverse
    .col-6
      margin-top 20px
      width 100%
  


/* preloader */

#content__preloader
  display block
  position absolute
  top 50%
  left 50%
  margin-top -25px
  margin-left -25px
  background-color #fff
  width 50px
  height 50px
  background-color transparent
  animation-duration: 1s;
  animation-iteration-count: infinite;
  animation-name: preloader;
  animation-timing-function linear
  animation-duration: 1s;
  animation-iteration-count infinite
  transition all 0.3s
  opacity 0
  @keyframes preloader
    0% {transform: rotate(0deg) ;}
    100% {transform: rotate(360deg);}



  #circle
    stroke-dasharray: 145;
    stroke-dashoffset: 145;
    animation-name: circle;
    animation-duration: 1s;
    animation-direction alternate
    animation-timing-function ease-in
    animation-iteration-count infinite
    @keyframes circle
      0% {stroke-dashoffset: 145;}
      60% {stroke-dashoffset: 30;}
      100% {stroke-dashoffset: 0;}
			
					
		


