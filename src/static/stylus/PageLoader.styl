pheload_height = 140px

.pageload-bg
	position fixed
	width 100%	
	height 100%
	background-color #45676e
	top 0
	z-index 99
	transition all 0.7s
	.preload-box
		color #fff
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		font-size 40px
		i
			animation-name: preloader;
			animation-timing-function linear
			animation-duration: 1s;
			animation-iteration-count infinite
			@keyframes preloader
				0% {transform: rotateX(0deg) ;}
				100% {transform: rotateX(360deg);}
		span
			padding-left 10px
			text-transform capitalize
			font-weight bolder
			//font-size 24px
		.load-view 
			font-size pheload_height
			width 120px
			margin-left -60px
		.load-hide 
			font-size pheload_height
			width 120px
			margin-left: -60px;
			color #fff

		.load-view
		.load-hide 
			.status
				font-family: 'Open Sans', sans-serif;
				position absolute
				font-size 18px
				color #fff
				bottom -10px
				left 0
				right 0

	.in-block
		display block


	





